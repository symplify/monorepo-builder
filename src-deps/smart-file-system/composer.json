{
    "name": "symplify/smart-file-system",
    "description": "Sanitized FileInfo with safe getRealPath() and other handy methods",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "nette/utils": "^4.0.5",
        "symfony/filesystem": "^6.2",
        "symfony/finder": "^6.2",
        "symplify/easy-testing": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpstan/extension-installer": "^1.2",
        "rector/rector": "^0.15.10",
        "symplify/easy-ci": "^11.1",
        "symplify/easy-coding-standard": "^11.1",
        "symplify/phpstan-extensions": "^11.1",
        "symplify/phpstan-rules": "^11.2",
        "symplify/symplify-kernel": "*",
        "tomasvotruba/class-leak": "^2.0.5",
        "tomasvotruba/unused-public": "^0.3.0"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../autowire-array-parameter"
        },
        {
            "type": "path",
            "url": "../easy-testing"
        },
        {
            "type": "path",
            "url": "../package-builder"
        },
        {
            "type": "path",
            "url": "../symplify-kernel"
        }
    ],
    "autoload": {
        "psr-4": {
            "Symplify\\SmartFileSystem\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\SmartFileSystem\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "11.2-dev"
        }
    },
    "scripts": {
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": "vendor/bin/ecs check --fix --ansi",
        "phpstan": "vendor/bin/phpstan analyse --ansi  --error-format symplify",
        "rector": "vendor/bin/rector process --dry-run --ansi"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "platform-check": false,
        "allow-plugins": {
            "cweagans/composer-patches": true,
            "phpstan/extension-installer": true
        }
    }
}
